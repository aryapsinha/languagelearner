{
    "name": "Found in Translation",
    "description": "Learn with the language lords.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
      "activeTab", "storage"
    ],
    "background" : {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "highlight_popup.html",
      "default_icon": "hello_extensions.png"
    }
}